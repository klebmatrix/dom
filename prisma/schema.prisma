// dom/prisma/schema.prisma

// Define a fonte de dados do seu banco de dados
// 'postgresql' é um exemplo; use o provider correto para o seu banco (mysql, sqlite, etc.)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // A URL de conexão com seu banco, geralmente de uma variável de ambiente
}

// O gerador é responsável por gerar o Prisma Client,
// que é o código que você usa para interagir com o banco de dados.
generator client {
  provider = "prisma-client-js"
  // Não adicione 'output' aqui a menos que você queira gerar o cliente em um local não padrão.
  // O padrão é node_modules/.prisma/client, que é geralmente o ideal.
}

